	<style>
		/* Hero section styling */
		.hero-section {
			/* Full-width container with standard height */
			/* Height: 600px on mobile, 700px on desktop */
		}
		
		/* Ensure hero image covers full area */
		.hero-section img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			object-position: center;
		}
		
		/* Text shadow for better readability over images */
		.hero-title {
			text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
		}
		
		.hero-subtitle {
			text-shadow: 0 1px 5px rgba(0, 0, 0, 0.5);
		}
	</style>

</Layout>