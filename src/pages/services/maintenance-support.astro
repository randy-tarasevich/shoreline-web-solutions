---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';

const pageTitle = "Website Maintenance & Support Services - Shoreline Web Solutions | Ongoing Website Care";
const pageDescription = "Professional website maintenance and support services for Connecticut businesses. We provide security updates, performance monitoring, content updates, and 24/7 technical support to keep your website running smoothly.";
const pageKeywords = "website maintenance, website support, Connecticut web maintenance, website updates, security updates, website monitoring, technical support, ongoing website care";
const canonicalUrl = "/services/maintenance-support";
---

<Layout 
	title={pageTitle}
	description={pageDescription}
	keywords={pageKeywords}
	canonical={canonicalUrl}
	ogType="website"
>
	<!-- Structured Data for Service -->
	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "Service",
		"serviceType": "Website Maintenance & Support",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Shoreline Web Solutions",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Old Lyme",
				"addressRegion": "CT",
				"addressCountry": "US"
			}
		},
		"areaServed": {
			"@type": "State",
			"name": "Connecticut"
		},
		"description": pageDescription,
		"name": "Website Maintenance & Support Services"
	})} />
	<main>
		<!-- Navigation -->
		<Navigation currentPage="services" />

		<!-- Hero Section -->
		<section class="pt-20 pb-16 bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center">
					<h1 class="hero-title text-5xl md:text-6xl font-bold text-white mb-6">
						Maintenance & <span class="bg-gradient-to-r from-blue-200 to-cyan-200 bg-clip-text text-transparent">Support</span>
					</h1>
					<p class="hero-subtitle text-xl text-blue-100 max-w-3xl mx-auto leading-relaxed">
						Ongoing support and maintenance to keep your website secure, updated, and performing optimally.
					</p>
				</div>
			</div>
		</section>

		<!-- Service Details Section -->
		<section class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-6">
				<div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
					<div>
						<div class="w-16 h-16 bg-gradient-to-r from-green-600 to-teal-600 rounded-lg flex items-center justify-center mb-6">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
							</svg>
						</div>
						<h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
							Keep Your Website Running Smoothly
						</h2>
						<p class="text-lg text-slate-600 leading-relaxed mb-6">
							Your website is a living, breathing part of your business that requires ongoing care and attention. Our maintenance and support services ensure your site stays secure, up-to-date, and performing at its best long after launch.
						</p>
						<p class="text-lg text-slate-600 leading-relaxed">
							From security updates and performance monitoring to content updates and technical support, we handle the technical details so you can focus on running your business.
						</p>
					</div>
					<div class="bg-gradient-to-br from-green-50 to-teal-50 p-8 rounded-xl shadow-lg">
						<h3 class="text-2xl font-bold text-slate-900 mb-6">Support Services</h3>
						<ul class="space-y-4">
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-slate-700">Security updates & patches</span>
							</li>
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-slate-700">Performance monitoring</span>
							</li>
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-slate-700">Content updates & changes</span>
							</li>
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-slate-700">24/7 technical support</span>
							</li>
							<li class="flex items-start gap-3">
								<svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-slate-700">Regular backups & recovery</span>
							</li>
						</ul>
					</div>
				</div>

				<!-- Benefits Section -->
				<div class="grid md:grid-cols-3 gap-8 mb-16">
					<div class="feature-card bg-gradient-to-br from-green-50 to-teal-50 p-6 rounded-xl">
						<h3 class="text-xl font-bold text-slate-900 mb-4">Peace of Mind</h3>
						<p class="text-slate-600">
							Rest easy knowing your website is protected from security threats and technical issues.
						</p>
					</div>
					<div class="feature-card bg-gradient-to-br from-teal-50 to-green-50 p-6 rounded-xl">
						<h3 class="text-xl font-bold text-slate-900 mb-4">Always Up-to-Date</h3>
						<p class="text-slate-600">
							Keep your site current with the latest features, security patches, and performance improvements.
						</p>
					</div>
					<div class="feature-card bg-gradient-to-br from-cyan-50 to-green-50 p-6 rounded-xl">
						<h3 class="text-xl font-bold text-slate-900 mb-4">Quick Response</h3>
						<p class="text-slate-600">
							Get fast support when you need it, with priority response times for urgent issues.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-20 bg-gradient-to-r from-slate-900 to-blue-900">
			<div class="max-w-4xl mx-auto text-center px-6">
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
					Ready for Ongoing Support?
				</h2>
				<p class="text-xl text-blue-200 mb-8 leading-relaxed">
					Let's keep your website secure, updated, and performing at its best.
				</p>
				<a href="/contact" 
					 class="inline-block px-8 py-4 bg-white text-slate-900 font-semibold rounded-lg hover:bg-blue-50 transition-all duration-300 hover:scale-105">
					Get Support
				</a>
			</div>
		</section>
	</main>
</Layout>


