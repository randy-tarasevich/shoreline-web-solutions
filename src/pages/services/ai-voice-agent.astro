---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import { Image } from 'astro:assets';

// Import AI Voice Agent images (add your images to src/assets/images/services/ai-voice/)
// Uncomment when you add images:
// import aiVoiceHeroImage from '../../assets/images/services/ai-voice/hero.jpg';

const pageTitle = "AI Voice Agent - 24/7 Phone Support with Natural Conversations | Shoreline Web Solutions";
const pageDescription = "Custom AI-powered voice agent for your business phone line. Answer calls 24/7, schedule appointments, capture leads—all with natural voice conversations powered by Twilio and ElevenLabs.";
const pageKeywords = "AI voice agent, AI phone assistant, automated phone support, 24/7 phone answering, Twilio voice agent, ElevenLabs voice AI";
const canonicalUrl = "/services/ai-voice-agent";
const siteUrl = "https://shorelinewebsolutions.com";
---

<Layout 
	title={pageTitle}
	description={pageDescription}
	keywords={pageKeywords}
	canonical={canonicalUrl}
	ogType="website"
>
	<!-- Breadcrumb Structured Data -->
	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "BreadcrumbList",
		"itemListElement": [
			{
				"@type": "ListItem",
				"position": 1,
				"name": "Home",
				"item": `${siteUrl}/`
			},
			{
				"@type": "ListItem",
				"position": 2,
				"name": "Services",
				"item": `${siteUrl}/services`
			},
			{
				"@type": "ListItem",
				"position": 3,
				"name": "AI Voice Agent",
				"item": `${siteUrl}${canonicalUrl}`
			}
		]
	})} />
	<main>
		<!-- Navigation -->
		<Navigation currentPage="services" />

		<!-- Hero Section - Minimal & Confident -->
		<section class="relative pt-32 pb-20 md:pt-40 md:pb-28 overflow-hidden bg-gradient-to-br from-blue-700 to-cyan-700 hero-section">
			<!-- Subtle gradient overlay -->
			<div class="absolute inset-0 bg-gradient-to-br from-blue-700/90 via-blue-600/80 to-cyan-600/90"></div>

			<!-- Decorative wave motif -->
			<div class="absolute bottom-0 left-0 right-0 h-24 md:h-32 opacity-20">
				<svg class="w-full h-full" viewBox="0 0 1440 120" preserveAspectRatio="none" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M0 60C240 20 480 100 720 60C960 20 1200 100 1440 60V120H0V60Z" fill="url(#wave-gradient-voice)"/>
					<path d="M0 80C240 40 480 120 720 80C960 40 1200 120 1440 80V120H0V80Z" fill="url(#wave-gradient-voice)" opacity="0.5"/>
					<defs>
						<linearGradient id="wave-gradient-voice" x1="0" y1="0" x2="1440" y2="0">
							<stop offset="0%" stop-color="#ffffff"/>
							<stop offset="50%" stop-color="#e0f2fe"/>
							<stop offset="100%" stop-color="#ffffff"/>
						</linearGradient>
					</defs>
				</svg>
			</div>

			<!-- Accent line -->
			<div class="absolute top-24 left-1/2 -translate-x-1/2 w-16 h-0.5 bg-gradient-to-r from-white/60 via-cyan-200 to-white/60 rounded-full"></div>

			<!-- Content -->
			<div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
				<h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight tracking-tight">
					Never Miss a <span class="text-cyan-200">Phone Call</span> Again
				</h1>
				<p class="hero-subtitle text-lg md:text-xl text-blue-100 mb-8 max-w-2xl mx-auto leading-relaxed">
					Answer every call 24/7 with natural voice conversations. Schedule appointments, answer questions, capture leads—all with an AI voice agent powered by ElevenLabs and Twilio.
				</p>
				<div class="flex items-center justify-center gap-3 text-blue-200 mb-12 text-sm">
					<div class="flex items-center gap-2">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
						</svg>
						<span>ElevenLabs Voice</span>
					</div>
					<span>•</span>
					<div class="flex items-center gap-2">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
						</svg>
						<span>Twilio Integration</span>
					</div>
				</div>
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
					<a href="/contact" class="hero-cta group px-8 py-4 bg-white text-blue-700 font-semibold rounded-lg shadow-lg shadow-white/20 hover:shadow-xl hover:bg-blue-50 transition-all duration-300 hover:scale-105">
						<span class="flex items-center gap-2">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
							</svg>
							Schedule a Demo Call
						</span>
					</a>
					<a href="#real-conversations" class="hero-cta group px-8 py-4 bg-white text-blue-700 font-semibold rounded-lg shadow-lg shadow-white/20 hover:shadow-xl hover:bg-blue-50 transition-all duration-300 hover:scale-105">
						<span class="flex items-center gap-2">
							Hear Example Calls
							<svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
							</svg>
						</span>
					</a>
				</div>
			</div>
		</section>

		<!-- Coming Soon Banner -->
		<section class="py-4 bg-amber-500">
			<div class="max-w-7xl mx-auto px-6 text-center">
				<p class="text-lg font-semibold text-white">This service is coming soon. Contact us to be notified when it launches or to discuss your needs.</p>
			</div>
		</section>

		<!-- The Problem Section -->
		<section class="py-24 bg-gradient-to-br from-slate-50 via-blue-50 to-cyan-50">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="section-title text-4xl md:text-6xl font-bold text-slate-900 mb-6">
						Your Phone Rings. You Can't Answer. They Hang Up.
					</h2>
					<p class="text-xl md:text-2xl text-slate-600 max-w-3xl mx-auto">
						It happens every day—and every missed call is money walking out the door
					</p>
				</div>

				<div class="max-w-5xl mx-auto">
					<!-- Main Problem Card -->
					<div class="bg-white rounded-2xl p-8 md:p-12 mb-8 shadow-xl border-2 border-red-200">
						<div class="flex items-start gap-6 mb-6">
							<div class="flex-shrink-0">
								<div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center">
									<svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
									</svg>
								</div>
							</div>
							<div class="flex-1">
								<h3 class="text-3xl font-bold text-slate-900 mb-4">The Reality of Missed Calls</h3>
								<p class="text-lg text-slate-700 leading-relaxed mb-6">
									When customers call and get no answer, they don't wait. They don't leave a voicemail. They simply call your competitor instead. Studies show that <strong class="text-red-600">80% of callers hang up if they don't reach someone immediately</strong>.
								</p>
								<div class="grid md:grid-cols-2 gap-4">
									<div class="bg-red-50 rounded-lg p-4 border border-red-100">
										<div class="text-2xl font-bold text-red-600 mb-1">27%</div>
										<p class="text-sm text-slate-700">of all business calls go unanswered</p>
									</div>
									<div class="bg-red-50 rounded-lg p-4 border border-red-100">
										<div class="text-2xl font-bold text-red-600 mb-1">$1,200+</div>
										<p class="text-sm text-slate-700">average revenue lost per month</p>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Scenarios in a different layout -->
					<div class="space-y-6 mb-12">
						<!-- Scenario 1 -->
						<div class="bg-white rounded-xl p-6 shadow-lg border-l-4 border-blue-600 flex items-start gap-4">
							<div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<div class="flex-1">
								<div class="flex items-center gap-3 mb-2">
									<span class="font-mono text-sm text-slate-500">8:47 PM</span>
									<span class="text-slate-300">•</span>
									<span class="text-sm font-semibold text-slate-700">After Hours</span>
								</div>
								<p class="text-slate-700 mb-2">
									Customer needs emergency service tomorrow. Calls your business. Gets voicemail. 
								</p>
								<p class="text-red-600 font-semibold text-sm">→ Calls competitor, books with them instead</p>
							</div>
						</div>

						<!-- Scenario 2 -->
						<div class="bg-white rounded-xl p-6 shadow-lg border-l-4 border-cyan-600 flex items-start gap-4">
							<div class="flex-shrink-0 w-12 h-12 bg-cyan-100 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
								</svg>
							</div>
							<div class="flex-1">
								<div class="flex items-center gap-3 mb-2">
									<span class="font-mono text-sm text-slate-500">2:15 PM</span>
									<span class="text-slate-300">•</span>
									<span class="text-sm font-semibold text-slate-700">Lunch Rush</span>
								</div>
								<p class="text-slate-700 mb-2">
									Potential client calls during your busiest hour. You're on another call. 
								</p>
								<p class="text-red-600 font-semibold text-sm">→ They hang up, find someone else</p>
							</div>
						</div>

						<!-- Scenario 3 -->
						<div class="bg-white rounded-xl p-6 shadow-lg border-l-4 border-blue-500 flex items-start gap-4">
							<div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
								</svg>
							</div>
							<div class="flex-1">
								<div class="flex items-center gap-3 mb-2">
									<span class="font-mono text-sm text-slate-500">Saturday</span>
									<span class="text-slate-300">•</span>
									<span class="text-sm font-semibold text-slate-700">Weekend</span>
								</div>
								<p class="text-slate-700 mb-2">
									Weekend customers need service. You're closed. They call anyway.
								</p>
								<p class="text-red-600 font-semibold text-sm">→ No answer. They move on to the next business</p>
							</div>
						</div>
					</div>

					<!-- CTA Section -->
					<div class="bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl p-8 md:p-12 text-white shadow-2xl text-center">
						<div class="max-w-3xl mx-auto">
							<h3 class="text-3xl md:text-4xl font-bold mb-4">
								What if every call got answered—instantly?
							</h3>
							<p class="text-xl text-blue-100 mb-6">
								Even at 2 AM. Even on weekends. Even when you're on vacation.
							</p>
							<p class="text-lg text-cyan-100">
								An AI voice agent makes it possible.
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Solution Section -->
		<section class="py-24 bg-gradient-to-br from-slate-50 to-blue-50">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center mb-20">
					<h2 class="section-title text-4xl md:text-6xl font-bold text-slate-900 mb-6">
						Meet Your New Phone Receptionist
					</h2>
					<p class="text-xl md:text-2xl text-slate-600 max-w-3xl mx-auto">
						An AI voice agent that answers YOUR phone with natural conversations powered by ElevenLabs
					</p>
				</div>

				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
					<!-- Feature 1 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">24/7 Phone Answering</h3>
						<p class="text-slate-600 leading-relaxed">
							Never miss a call again. Your voice agent answers the phone at 2 AM, on holidays, and while you're on vacation.
						</p>
					</div>

					<!-- Feature 3 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Knows Your Business</h3>
						<p class="text-slate-600 leading-relaxed">
							We train the AI on your services, pricing, policies, and FAQs. It speaks like your team—professional, helpful, and on-brand.
						</p>
					</div>

					<!-- Feature 4 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Schedule Appointments</h3>
						<p class="text-slate-600 leading-relaxed">
							The voice agent can schedule appointments, check availability, and capture customer information during the call.
						</p>
					</div>

					<!-- Feature 5 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Twilio Integration</h3>
						<p class="text-slate-600 leading-relaxed">
							Built on reliable Twilio infrastructure for crystal-clear call quality and seamless phone system integration.
						</p>
					</div>

					<!-- Feature 6 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Call Recording & Analytics</h3>
						<p class="text-slate-600 leading-relaxed">
							Review call transcripts, see what customers ask about most, and get insights to improve your service.
						</p>
					</div>
				</div>

				<div class="max-w-4xl mx-auto bg-gradient-to-br from-blue-600 via-cyan-600 to-blue-600 rounded-2xl p-10 md:p-14 text-white shadow-2xl relative overflow-hidden">
					<div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>
					<div class="relative z-10 text-center">
						<p class="text-3xl md:text-4xl font-bold mb-4">
							It's like hiring a receptionist who works 24/7, never takes a break, and costs 90% less
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- How It Works Section - Phone-Focused -->
		<section id="examples" class="py-24 bg-gradient-to-br from-slate-50 to-white">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center mb-16">
					<div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-100 to-cyan-100 rounded-full mb-6">
						<svg class="w-8 h-8 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
						</svg>
					</div>
					<h2 class="section-title text-4xl md:text-6xl font-bold text-slate-900 mb-6">
						From Setup to Answering Calls
					</h2>
					<p class="text-xl md:text-2xl text-slate-600 max-w-3xl mx-auto">
						Get your voice agent live and answering calls in 2-3 weeks
					</p>
				</div>

				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
					<!-- Step 1 -->
					<div class="feature-card bg-gradient-to-br from-blue-50 to-cyan-50 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-blue-100">
						<div class="w-14 h-14 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-4 mx-auto shadow-md">
							<span class="text-2xl font-bold text-white">1</span>
						</div>
						<h3 class="text-xl font-bold text-slate-900 mb-4 text-center">We Learn Your Business</h3>
						<ul class="space-y-2 text-slate-700">
							<li class="flex items-start gap-2">
								<svg class="w-4 h-4 text-cyan-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
