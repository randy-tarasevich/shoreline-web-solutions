---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import { Image } from 'astro:assets';

// Import AI Chat Assistant images (add your images to src/assets/images/services/ai-chat/)
// Uncomment when you add images:
// import aiChatHeroImage from '../../assets/images/services/ai-chat/hero.jpg';
// import dashboardMockupImage from '../../assets/images/services/ai-chat/dashboard-mockup.jpg';

const pageTitle = "AI Chat Assistant - 24/7 Customer Support That Never Sleeps | Shoreline Web Solutions";
const pageDescription = "Custom AI-powered chatbot for your business. Answer customer questions instantly, capture leads 24/7, and never miss an opportunity. Built for businesses everywhere.";
const pageKeywords = "AI chatbot, customer service chatbot, automated chat support, lead capture chatbot, 24/7 customer support";
const canonicalUrl = "/services/ai-chat-assistant";
const siteUrl = "https://shorelinewebsolutions.com";
---

<Layout 
	title={pageTitle}
	description={pageDescription}
	keywords={pageKeywords}
	canonical={canonicalUrl}
	ogType="website"
>
	<!-- Breadcrumb Structured Data -->
	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "BreadcrumbList",
		"itemListElement": [
			{
				"@type": "ListItem",
				"position": 1,
				"name": "Home",
				"item": `${siteUrl}/`
			},
			{
				"@type": "ListItem",
				"position": 2,
				"name": "Services",
				"item": `${siteUrl}/services`
			},
			{
				"@type": "ListItem",
				"position": 3,
				"name": "AI Chat Assistant",
				"item": `${siteUrl}${canonicalUrl}`
			}
		]
	})} />
	<main>
		<!-- Navigation -->
		<Navigation currentPage="services" />

		<!-- Hero Section - Minimal & Confident -->
		<section class="relative pt-32 pb-20 md:pt-40 md:pb-28 overflow-hidden bg-gradient-to-br from-blue-700 to-cyan-700 hero-section">
			<!-- Subtle gradient overlay -->
			<div class="absolute inset-0 bg-gradient-to-br from-blue-700/90 via-blue-600/80 to-cyan-600/90"></div>

			<!-- Decorative wave motif -->
			<div class="absolute bottom-0 left-0 right-0 h-24 md:h-32 opacity-20">
				<svg class="w-full h-full" viewBox="0 0 1440 120" preserveAspectRatio="none" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M0 60C240 20 480 100 720 60C960 20 1200 100 1440 60V120H0V60Z" fill="url(#wave-gradient-chat)"/>
					<path d="M0 80C240 40 480 120 720 80C960 40 1200 120 1440 80V120H0V80Z" fill="url(#wave-gradient-chat)" opacity="0.5"/>
					<defs>
						<linearGradient id="wave-gradient-chat" x1="0" y1="0" x2="1440" y2="0">
							<stop offset="0%" stop-color="#ffffff"/>
							<stop offset="50%" stop-color="#e0f2fe"/>
							<stop offset="100%" stop-color="#ffffff"/>
						</linearGradient>
					</defs>
				</svg>
			</div>

			<!-- Accent line -->
			<div class="absolute top-24 left-1/2 -translate-x-1/2 w-16 h-0.5 bg-gradient-to-r from-white/60 via-cyan-200 to-white/60 rounded-full"></div>

			<!-- Content -->
			<div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
				<h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight tracking-tight">
					Your Customer Service Team That <span class="text-cyan-200">Never Sleeps</span>
				</h1>
				<p class="hero-subtitle text-lg md:text-xl text-blue-100 mb-12 max-w-2xl mx-auto leading-relaxed">
					Answer customer questions instantly, capture leads automatically, and provide 24/7 support—even when you're closed, on vacation, or just busy.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
					<a href="/contact" class="hero-cta group px-8 py-4 bg-white text-blue-700 font-semibold rounded-lg shadow-lg shadow-white/20 hover:shadow-xl hover:bg-blue-50 transition-all duration-300 hover:scale-105">
						<span class="flex items-center gap-2">
							See a Live Demo
							<svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
							</svg>
						</span>
					</a>
					<a href="#see-it-in-action" class="hero-cta group px-8 py-4 bg-white text-blue-700 font-semibold rounded-lg shadow-lg shadow-white/20 hover:shadow-xl hover:bg-blue-50 transition-all duration-300 hover:scale-105">
						<span class="flex items-center gap-2">
							See How It Works
							<svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
							</svg>
						</span>
					</a>
				</div>
			</div>
		</section>

		<!-- Coming Soon Banner -->
		<section class="py-4 bg-amber-500">
			<div class="max-w-7xl mx-auto px-6 text-center">
				<p class="text-lg font-semibold text-white">This service is coming soon. Contact us to be notified when it launches or to discuss your needs.</p>
			</div>
		</section>

		<!-- The Problem Section -->
		<section class="py-24 bg-white">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center mb-20">
					<h2 class="section-title text-4xl md:text-6xl font-bold text-slate-900 mb-6">
						Stop Losing Customers to Unanswered Questions
					</h2>
					<p class="text-xl md:text-2xl text-slate-600 max-w-3xl mx-auto">
						Here's what happens every single day:
					</p>
				</div>

				<div class="max-w-6xl mx-auto">
					<div class="grid md:grid-cols-3 gap-6 mb-12">
						<!-- Lost Lead 1 -->
						<div class="feature-card bg-gradient-to-br from-amber-50 to-amber-100 border-2 border-amber-200 rounded-xl p-8 shadow-lg">
							<div class="w-16 h-16 bg-amber-500 rounded-xl flex items-center justify-center mb-6 shadow-lg">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<h3 class="text-2xl font-bold text-slate-900 mb-4">8:47 PM</h3>
							<p class="text-slate-700 leading-relaxed">
								A potential customer visits your website. They have a simple question about your services.
								<span class="block mt-4 text-amber-700 font-semibold italic">You're closed. They leave.</span>
							</p>
						</div>

						<!-- Lost Lead 2 -->
						<div class="feature-card bg-gradient-to-br from-amber-50 to-amber-100 border-2 border-amber-200 rounded-xl p-8 shadow-lg">
							<div class="w-16 h-16 bg-amber-500 rounded-xl flex items-center justify-center mb-6 shadow-lg">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
								</svg>
							</div>
							<h3 class="text-2xl font-bold text-slate-900 mb-4">2:15 PM</h3>
							<p class="text-slate-700 leading-relaxed">
								Someone calls during lunch. You're with another customer. They can't wait.
								<span class="block mt-4 text-amber-700 font-semibold italic">They call your competitor.</span>
							</p>
						</div>

						<!-- Lost Lead 3 -->
						<div class="feature-card bg-gradient-to-br from-amber-50 to-amber-100 border-2 border-amber-200 rounded-xl p-8 shadow-lg">
							<div class="w-16 h-16 bg-amber-500 rounded-xl flex items-center justify-center mb-6 shadow-lg">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
								</svg>
							</div>
							<h3 class="text-2xl font-bold text-slate-900 mb-4">Saturday</h3>
							<p class="text-slate-700 leading-relaxed">
								Weekend shoppers want instant answers. You're enjoying your day off.
								<span class="block mt-4 text-amber-700 font-semibold italic">Opportunity lost.</span>
							</p>
						</div>
					</div>

					<div class="bg-gradient-to-br from-slate-50 to-blue-50 rounded-2xl p-8 md:p-12 mb-12 border border-slate-200 shadow-xl">
						<div class="text-center">
							<p class="text-2xl md:text-3xl font-bold text-slate-900 mb-4">
								How many leads are you losing every week?
							</p>
							<p class="text-xl text-slate-600">
								The average business loses <span class="text-amber-700 font-bold">15-30 potential customers per month</span> just from unanswered questions.
							</p>
						</div>
					</div>

					<div class="text-center bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl p-8 md:p-12 text-white shadow-2xl">
						<p class="text-3xl md:text-4xl font-bold mb-4">
							What if every question got answered instantly?
						</p>
						<p class="text-xl md:text-2xl text-blue-100 italic">
							That's exactly what an AI chatbot does.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Solution Section -->
		<section class="py-24 bg-gradient-to-br from-slate-50 to-blue-50">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center mb-20">
					<h2 class="section-title text-4xl md:text-6xl font-bold text-slate-900 mb-6">
						Meet Your New Customer Service Team
					</h2>
					<p class="text-xl md:text-2xl text-slate-600 max-w-3xl mx-auto">
						An AI chatbot that knows YOUR business inside and out
					</p>
				</div>

				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
					<!-- Feature 1 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">24/7 Availability</h3>
						<p class="text-slate-600 leading-relaxed">
							Never miss a lead again. Your chatbot answers questions at 2 AM, on holidays, and while you're on vacation.
						</p>
					</div>

					<!-- Feature 2 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Instant Responses</h3>
						<p class="text-slate-600 leading-relaxed">
							No more "we'll get back to you." Customers get answers in seconds, not hours or days.
						</p>
					</div>

					<!-- Feature 3 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Knows Your Business</h3>
						<p class="text-slate-600 leading-relaxed">
							We train the AI on your services, pricing, policies, and FAQs. It sounds like you—not a generic bot.
						</p>
					</div>

					<!-- Feature 4 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Automatic Lead Capture</h3>
						<p class="text-slate-600 leading-relaxed">
							When someone needs more info, the chatbot captures their contact details and notifies you immediately.
						</p>
					</div>

					<!-- Feature 5 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Smart Escalation</h3>
						<p class="text-slate-600 leading-relaxed">
							Can't answer a complex question? The bot gracefully hands off to you with full context of the conversation.
						</p>
					</div>

					<!-- Feature 6 -->
					<div class="feature-card bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 shadow-lg">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
							</svg>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-4">Insights & Analytics</h3>
						<p class="text-slate-600 leading-relaxed">
							See what customers are asking about most. Use these insights to improve your service and marketing.
						</p>
					</div>
				</div>

				<div class="max-w-4xl mx-auto bg-gradient-to-br from-blue-600 via-cyan-600 to-blue-600 rounded-2xl p-10 md:p-14 text-white shadow-2xl relative overflow-hidden">
					<div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>
					<div class="relative z-10 text-center">
						<p class="text-3xl md:text-4xl font-bold mb-4">
							It's like hiring a customer service rep who works 24/7, never takes a break, and costs 90% less
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- How It Works Section -->
		<section id="examples" class="py-24 bg-white">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center mb-20">
					<h2 class="section-title text-4xl md:text-6xl font-bold text-slate-900 mb-6">
						How It Works
					</h2>
					<p class="text-xl md:text-2xl text-slate-600 max-w-3xl mx-auto">
						From setup to serving customers in 4 simple steps
					</p>
				</div>

				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
					<!-- Step 1 -->
					<div class="feature-card bg-gradient-to-br from-slate-50 to-blue-50 rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 mx-auto shadow-lg">
							<span class="text-3xl font-bold text-white">1</span>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-6 text-center">We Learn Your Business</h3>
						<ul class="space-y-3 text-slate-700">
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-cyan-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-sm">Discovery call about your services</span>
							</li>
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-cyan-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-sm">Review your website, FAQs, policies</span>
							</li>
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-cyan-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-sm">Document common questions</span>
							</li>
						</ul>
					</div>

					<!-- Step 2 -->
					<div class="feature-card bg-gradient-to-br from-slate-50 to-blue-50 rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 mx-auto shadow-lg">
							<span class="text-3xl font-bold text-white">2</span>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-6 text-center">We Build Your Chatbot</h3>
						<ul class="space-y-3 text-slate-700">
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-cyan-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-sm">Train AI on your knowledge base</span>
							</li>
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-cyan-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-sm">Configure tone and personality</span>
							</li>
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-cyan-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-sm">Set up lead capture and notifications</span>
							</li>
						</ul>
					</div>

					<!-- Step 3 -->
					<div class="feature-card bg-gradient-to-br from-slate-50 to-blue-50 rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-200">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center mb-6 mx-auto shadow-lg">
							<span class="text-3xl font-bold text-white">3</span>
						</div>
						<h3 class="text-2xl font-bold text-slate-900 mb-6 text-center">You Test & Approve</h3>
						<ul class="space-y-3 text-slate-700">
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-cyan-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-sm">We show you the chatbot in action</span>
							</li>
							<li class="flex items-start gap-2">
								<svg class="w-5 h-5 text-cyan-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="text-sm">Test with real questions</span>
