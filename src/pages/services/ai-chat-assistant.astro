	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "Service",
		"serviceType": "AI Chat Assistant",
		"provider": {
			"@type": "LocalBusiness",
			"name": "Shoreline Web Solutions",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Old Lyme",
				"addressRegion": "CT",
				"addressCountry": "US"
			}
		},
		"areaServed": {
			"@type": "State",
			"name": "Connecticut"
		},
		"description": pageDescription,
		"name": "AI Chat Assistant Services"
	})} />
