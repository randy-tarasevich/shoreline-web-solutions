---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';

const pageTitle = "AI Chat Assistant Services - Shoreline Web Solutions | AI-Powered Chatbots for Connecticut Businesses";
const pageDescription = "AI Chat Assistant services for Connecticut businesses. Automated customer support chatbots that provide 24/7 service, capture leads, and enhance your website's user experience.";
const pageKeywords = "AI chatbot, AI chat assistant, chatbot services, AI customer support, lead capture chatbot, Connecticut AI services, website chatbot, AI assistant, customer service automation, automated support";
const canonicalUrl = "/services/ai-chat-assistant";
---

<Layout 
